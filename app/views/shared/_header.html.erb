<header>
  <!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content mask">
    <li><%= link_to 'My Profile',  edit_user_registration_path %></li>
    <li><%= link_to 'My Projects',  myprojects_path %></li>
    <li class="divider"></li>
    <li><%= link_to 'Log out',destroy_user_session_path, method: :delete %></li>
  </ul>
  <ul id="dropdown2" class="dropdown-content mask">
    <li><%= link_to 'My Profile',  edit_user_registration_path %></li>
    <li><%= link_to 'My Projects',  myprojects_path %></li>
    <li class="divider"></li>
    <li><%= link_to 'Log out',destroy_user_session_path, method: :delete %></li>
  </ul>
  <nav class="black lighten-4 z-depth">
    <div class="container">
      <div class="nav-wrapper">
        <a href="#!" class="brand-logo">EagleCode</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><%= link_to 'Projects',  root_path %></li>
          <% if(!user_signed_in?) %>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
          <% else %>
            <!-- Dropdown Trigger -->
            <li><a class="dropdown-trigger valign-wrapper" href="#!" data-target="dropdown1">
                <%= image_tag avatar_url(current_user), class: "circle responsive-img" %>&nbsp;
                <%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <ul class="sidenav" id="mobile-demo">
      <% if(!user_signed_in?) %>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li><%= link_to 'Sign Up', new_user_session_path %></li>
      <% else %>
        <!-- Dropdown Trigger -->
        <%= image_tag avatar_url(current_user), class: "circle responsive-img" %>&nbsp;
        <li><a class="dropdown-trigger valign-wrapper" href="#!" data-target="dropdown2"><%= current_user.email %><i class="material-icons right">arrow_drop_down</i></a></li>
      <% end %>
    </ul>
  </div>
</header>
